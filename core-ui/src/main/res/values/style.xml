<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Shop.GreenRatingBarSmall" parent="Theme.Shop">
        <item name="srb_starHeight">20dp</item>
        <item name="srb_starWidth">20dp</item>
        <item name="srb_starPadding">0dp</item>
        <item name="srb_drawableEmpty">@drawable/selector_rating_bar_empty</item>
        <item name="srb_drawableFilled">@drawable/selector_rating_bar_filled</item>
        <item name="srb_isIndicator">true</item>
        <item name="srb_stepSize">0.1</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="Theme.Shop.GreenRatingBar" parent="Theme.Shop.GreenRatingBarSmall">
        <item name="srb_starHeight">24dp</item>
        <item name="srb_starWidth">24dp</item>
        <item name="srb_starPadding">0dp</item>
        <item name="srb_drawableEmpty">@drawable/selector_rating_bar_empty</item>
        <item name="srb_drawableFilled">@drawable/selector_rating_bar_filled</item>
        <item name="srb_isIndicator">true</item>
        <item name="srb_stepSize">0.1</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="Theme.Shop.Toolbar" parent="Theme.Shop">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
    </style>

    <declare-styleable name="ProgressButton">
        <attr name="pb_backgroundTint" format="color" />
        <attr name="pb_textSize" format="dimension" />
        <attr name="pb_textColor" format="color" />
        <attr name="text" format="string" />
    </declare-styleable>

    <style name="Theme.Shop.ProgressButton">

    </style>
</resources>